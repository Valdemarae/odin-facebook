<!DOCTYPE html>
<html>
  <head>
    <title>OdinFacebook</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if (current_user) %>
      <div class="header">
        <%= link_to 'Posts', posts_path %>
        <%= link_to 'Users', users_path %>
        <%= link_to 'Profile', user_path(current_user.id) %>
        <%= link_to "logout", destroy_user_session_path, data: { "turbo-method": :delete } %>
        <%= link_to 'Nofifications', notification_path(current_user.id), class: "notification" if current_user.received_invitations.any? %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
