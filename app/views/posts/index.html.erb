<h1>Posts</h1>
<h2><%= button_to 'Create Post', new_post_path, method: :get %></h2>

<ul>
  <% @posts.each do |post| %>
    <li>
      <h3>
        <%= post.creator.name %>
        <% if (post.creator.id == current_user.id) %>
          <%= button_to 'Edit Post', edit_post_path(post.id), method: :get %>
        <% end %>
      </h3> 
      <h4><%= post.content %></h4>
    </li>
  <% end %>
</ul>

<%= button_to "logout", destroy_user_session_path, method: :delete  %>